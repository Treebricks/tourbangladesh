<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#689F38"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="?attr/actionBarSize">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/developer"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="230dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/developer_logo"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/developer_name"
                android:layout_below="@+id/developer_logo"
                android:layout_centerHorizontal="true"
                android:text="Developed by\n\ttreebricks"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developer_name"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/holo_red_light"
                android:text="www.treebricks.com"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_info"
        android:layout_below="@+id/developer"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_header"
                android:text="Why This Application?"
                android:textSize="20sp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_header"
                android:padding="3dp"
                android:text="Tour Bangladesh is a smart application for finding the best spot for tourism near you. This is the first application of 12A12M (12 Application on 12 Months)."/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
